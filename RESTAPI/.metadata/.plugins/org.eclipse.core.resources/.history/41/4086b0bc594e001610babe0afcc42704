package com.mysql;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

import com.mysql.jdbc.Driver;

public class Sample {
	public static void main(String[] args) {
		Connection con=null;
		Statement stmt=null;
		ResultSet rs=null;
		
	try
{
		Driver driveref = new Driver();
				DriverManager.deregisterDriver(driveref);
			//2.GET THE DB CONNECTION VIA DRIVER
				
	
		String dburl="jdbc:mysql://localhost:3306/student?user=root&password=root";
		con=DriverManager.getConnection(dburl);
		//3.ISSUSE THE SQL QUERIES VIA DRIVER
		String query="select * from address";
				stmt=con.createStatement();
				boolean isdbresult=stmt.execute(query);
				System.out.println("is data present in a table ::"+isdbresult);
				//process the result
				if (isdbresult) {
					 rs=stmt.getResultSet();
					while (rs.next()) {
						String name=rs.getString("name");
						String city=rs.getString("city");
						String state=rs.getString("state");

								System.out.println(" name:  "+name);
								System.out.println("city: "+city);
								System.out.println("state : "+state);
					}		
					}else
					{
						System.out.println("result type int count ");
						int count =stmt.getUpdateCount();
						System.out.println("rows effected count :"+count);
					}
			}
				catch(SQLException s){
					s.printStackTrace();
				}
				finally{
					/*
					 * 5.CLOSE ALL THE JDBC OBJECTS
					 */
					try{
						if (con!=null) {
							con.close();
						}
						if (stmt!=null) {
							stmt.close();
						}
						if (rs!=null) {
							rs.close();
						}
					}catch(SQLException e){
						e.printStackTrace();
					}
				}
			}
			}

